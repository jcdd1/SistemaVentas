        <table class="modern-table">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.id_categoria)</th>
                    <th>@Html.DisplayNameFor(model => model.nombre_categoria)</th>
                    <th>@Html.DisplayNameFor(model => model.descripcion)</th>
                    <th>@Html.DisplayNameFor(model => model.activo)</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.id_categoria)</td>
                        <td>@Html.DisplayFor(modelItem => item.nombre_categoria)</td>
                        <td>@Html.DisplayFor(modelItem => item.descripcion)</td>

                        <td>@Html.DisplayFor(modelItem => item.activo)</td>
                        <td class="action-cell">
                            <!-- Botón Editar -->
                            <button class="action-btn" title="Editar">
                                <a asp-action="Edit" asp-route-id="@item.id_categoria">
                                    <i class='bx bx-edit'></i>
                                </a>
                            </button>

                            <!-- Botón Detalles -->
                            <button class="action-btn" title="Detalles">
                                <a asp-action="Details" asp-route-id="@item.id_categoria">
                                    <i class='bx bx-show-alt'></i>
                                </a>
                            </button>

                            <!-- Botón Eliminar -->
                            <button class="action-btn" title="Eliminar">
                                <a asp-action="Delete" asp-route-id="@item.id_categoria">
                                    <i class="fas fa-trash-alt"></i>
                                </a>
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
               
